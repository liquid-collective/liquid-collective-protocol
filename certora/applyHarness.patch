+        WithdrawalStack.WithdrawalEvent memory _withdrawalEvent
+    ) internal pure returns (bool) {
+        return (
+            _redeemRequest.height < _withdrawalEvent.height + _withdrawalEvent.amount
+                && _redeemRequest.height >= _withdrawalEvent.height
+        );
+    }
